/**
 * Help overlay DOM.
 *
 * @author benvanik@google.com (Ben Vanik)
 */

{namespace wtf.app.ui.helpoverlay}


/**
 * Root control UI.
 */
{template .control}
  <div class="{css wtfAppUiHelpOverlay}">
    TODO: a prettier dialog<br/>
    <br/>
    ctrl-o : open a new trace<br/>
    ctrl-s : save current trace<br/>
    ? : show shortcuts<br/>
    <br/>
    ctrl-f : focus filter box<br/>
    esc : clear filter contents<br/>
    ctrl-g : zoom to frame #<br/>
    <br/>
    w/a/s/d up/left/down/right : move the viewport<br/>
    space/shift+space: move one viewport right/left<br/>
    home: fit viewport<br/>
    <br/>
    shift+drag mouse : select a region of the tracks
    shift+click/ctrl-a : clear selection
  </div>
{/template}
