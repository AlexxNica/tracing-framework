/**
 * TracksPanel info bar CSS.
 *
 * @author benvanik@google.com (Ben Vanik)
 */

@def WTF_APP_UI_TRACKSPANEL_INFO_HEADER_HEIGHT  40px;

.wtfAppUiTracksPanelInfoOuter {
}

.wtfAppUiTracksPanelInfoHeader {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  height: sub(WTF_APP_UI_TRACKSPANEL_INFO_HEADER_HEIGHT, 5px);
  border-bottom: 1px solid #ebebeb;
  padding-left: 5px;
  padding-top: 5px;
}

.wtfAppUiTracksPanelInfoHeader .kSearchField {
}

.wtfAppUiTracksPanelInfoContent {
  position: absolute;
  left: 0;
  right: 0;
  top: WTF_APP_UI_TRACKSPANEL_INFO_HEADER_HEIGHT;
  bottom: 0;
  padding: 3px;
  overflow-x: hidden;
  overflow-y: auto;
}


@def WTF_APP_UI_TRACKSPANEL_INFO_ENTRY_HEADER_X   60px;

.wtfAppUiTracksPanelInfoEntry {
  position: relative;
  height: 26px;
  font-family: monospace;
  font-size: 11px;
  border-bottom: 1px solid rgb(226, 226, 226);
  margin-bottom: 2px;
}
.wtfAppUiTracksPanelInfoEntryHeader {
  position: relative;
}
.wtfAppUiTracksPanelInfoEntryValue {
  position: relative;
  left: 0;
  width: WTF_APP_UI_TRACKSPANEL_INFO_ENTRY_HEADER_X;
  top: 0;
  height: 13px;
  text-align: right;
  font-weight: bold;
}
.wtfAppUiTracksPanelInfoEntryTitle {
  position: absolute;
  left: WTF_APP_UI_TRACKSPANEL_INFO_ENTRY_HEADER_X;
  right: 0;
  top: 0;
  bottom: 0;
  padding-left: 4px;
}
.wtfAppUiTracksPanelInfoEntryContent {
  position: absolute;
  top: 13px;
  left: WTF_APP_UI_TRACKSPANEL_INFO_ENTRY_HEADER_X;
  right: 0;
  height: 13px;
  padding-left: 4px;
  color: rgb(160, 160, 160);
  font-size: 10px;
}
