/**
 * Toolbar DOM.
 *
 * @author benvanik@google.com (Ben Vanik)
 */

{namespace wtf.app.ui.toolbar}


/**
 * Root control UI.
 */
{template .control}
  <div class="{css wtfAppUiToolbar}">
    <table class="{css wtfAppUiToolbarInfo}">
      <tr>
        <td>
          <img class="{css wtfAppUiToolbarInfoIcon}" src="">
        </td>
        <td class="{css wtfAppUiToolbarInfoTitle}">Loading...</td>
        <td>
          <a class="{css wtfAppUiToolbarInfoUrl}" target="_blank" href=""></a>
        </td>
        <td class="{css wtfAppUiToolbarInfoContext}">
          <!--[context]-->
        </td>
      </tr>
    </table>
    <div class="{css wtfAppUiToolbarRight}">
      <div class="{css wtfAppUiToolbarViewers}">
        <!--[viewer info]-->
      </div>
      <div class="{css kButtonBar} {css kRight} {css wtfAppUiToolbarButtons}">
        <a class="{css kButton} {css kMenuButton} {css kDisabled} {css wtfAppUiToolbarButtonOpen}" title="Open a trace file (CTRL-O)">
          Open
        </a>
        <a class="{css kButton} {css kMenuButton} {css kDisabled} {css wtfAppUiToolbarButtonOpenDrive}" title="Open a trace file from Google Drive">
          Open (Drive)
        </a>
        <a class="{css kButton} {css kMenuButton} {css kDisabled} {css wtfAppUiToolbarButtonShare}" title="Share the trace">
          Share
        </a>
        <a class="{css kButton} {css kMenuButton} {css kDisabled} {css wtfAppUiToolbarButtonSave}" title="Save the current trace file (CTRL-S)">
          Save
        </a>
        <a class="{css kButton} {css kMenuButton} {css wtfAppUiToolbarButtonSettings}"
          title="Show Settings">
          <img alt="Settings" src="icons/settings.svg">
        </a>
        <a class="{css kButton} {css kMenuButton} {css kDisabled} {css wtfAppUiToolbarButtonHelp}" title="Show the help screen (?)">
          Help
        </a>
      </div>
    </div>
  </div>
{/template}
